<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="Base.Theme.ExchangeRates" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/background_night</item>
        <item name="android:navigationBarColor">@color/background_scale</item>
    </style>

    <style name="Theme.ExchangeRates" parent="Base.Theme.ExchangeRates" />

    <style name="BaseTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_item</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ru_hero</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="TextNameCur" parent="BaseTextViewStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextError" parent="BaseTextViewStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextCurScale" parent="BaseTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextItemCurName" parent="BaseTextViewStyle">
        <item name="android:textColor">@color/background_fragment</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BackgroundFragment">
        <item name="android:background">@color/background_fragment_day</item>
    </style>

    <style name="BackgroundRecycler">
        <item name="android:background">@drawable/background_recycler_night</item>
        <item name="android:backgroundTint">@color/background_recycler_day</item>
    </style>

    <style name="BackgroundCurrency">
        <item name="android:background">@drawable/currency_background</item>
    </style>

    <style name="BackgroundLayoutCurScale">
        <item name="android:background">@drawable/currency_scale_background</item>
    </style>

    <style name="ImageCalendarColor">
        <item name="android:src">@drawable/baseline_calendar_month</item>
    </style>

</resources>